{
    "name": "chris/biblio",
    "description": "Système de gestion de bibliothèque numérique chrétienne avec fonctionnalités de catalogage et de gestion des utilisateurs",
    "type": "project",
    "license": "MIT",
    "keywords": ["library", "digital-library", "php", "mysql", "book-management", "christian-library"],
    "homepage": "https://github.com/stark123-clrt/biblio",
    "authors": [
        {
            "name": "ONDIYO CHRISTIAN",
            "email": "ondiyochristian10@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-mbstring": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "squizlabs/php_codesniffer": "^3.13",
        "phpstan/phpstan": "^2.1",
        "phpunit/php-code-coverage": "^11.0"
    },
    "autoload": {
        "classmap": ["classes/"]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage/ --coverage-text",
        "test:unit": "phpunit tests/SimpleTest.php --testdox",
        "test:auth": "phpunit tests/AuthenticationTest.php --testdox", 
        "test:repo": "phpunit tests/RepositoryTest.php --testdox",
        "test:all": [
            "@test:unit",
            "@test:auth", 
            "@test:repo"
        ],
        "test:watch": "phpunit --testdox --colors=always",
        "cs": "phpcs --standard=PSR12 classes/",
        "cs:fix": "phpcbf --standard=PSR12 classes/",
        "cs:report": "phpcs --standard=PSR12 --report=summary classes/",
        "analyse": "phpstan analyse classes/ --level=5",
        "analyse:baseline": "phpstan analyse classes/ --level=5 --generate-baseline",
        "quality": [
            "@cs",
            "@analyse"
        ],
        "ci": [
            "@test:coverage",
            "@cs",
            "@analyse"
        ],
        "ci:fast": [
            "@test:all",
            "@cs:report"
        ],
        "clean": [
            "rm -rf coverage/",
            "rm -rf .phpunit.cache/"
        ],
        "post-install-cmd": [
            "echo 'Installation terminée ! Utilisez composer test pour lancer les tests.'"
        ],
        "post-update-cmd": [
            "echo 'Mise à jour terminée ! Pensez à vérifier les tests avec composer ci.'"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "prefer-stable": true,
        "platform": {
            "php": "8.0"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "support": {
        "issues": "https://github.com/stark123-clrt/biblio/issues",
        "source": "https://github.com/stark123-clrt/biblio"
    }
}