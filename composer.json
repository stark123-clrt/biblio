{
    "name": "chris/biblio",
    "description": "Système de gestion de bibliothèque numérique",
    "type": "project",
    "license": "MIT",
    "keywords": ["library", "digital-library", "php", "mysql", "book-management"],
    "homepage": "https://github.com/stark123-clrt/biblio",
    "authors": [
        {
            "name": "ONDIYO CHRISTIAN",
            "email": "ondiyochristian10@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-mbstring": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "squizlabs/php_codesniffer": "^3.13",
        "phpstan/phpstan": "^2.1",
        "phpunit/php-code-coverage": "^11.0"
    },
    "autoload": {
        "classmap": ["classes/"]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit tests/SimpleTest.php --testdox",
        "test:auth": "phpunit tests/AuthenticationTest.php --testdox", 
        "test:repo": "phpunit tests/RepositoryTest.php --testdox",
        "test:all": [
            "@test:unit",
            "@test:auth", 
            "@test:repo"
        ],
        "cs": "phpcs --standard=PSR12 classes/",
        "cs:fix": "phpcbf --standard=PSR12 classes/",
        "analyse": "phpstan analyse classes/ --level=5",
        "ci": [
            "@test:all",
            "@cs",
            "@analyse"
        ],
        "post-install-cmd": [
            "echo 'Installation terminée !'"
        ],
        "post-update-cmd": [
            "echo 'Mise à jour terminée !'"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "prefer-stable": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}