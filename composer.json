{
    "name": "chris/biblio",
    "autoload": {
        "classmap": ["classes/"]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "ONDIYO CHRISTIAN",
            "email": "ondiyochristian10@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "squizlabs/php_codesniffer": "^3.13",
        "phpstan/phpstan": "^2.1",
        "phpunit/php-code-coverage": "^11.0"
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit tests/SimpleTest.php --testdox",
        "test:auth": "phpunit tests/AuthenticationTest.php --testdox", 
        "test:repo": "phpunit tests/RepositoryTest.php --testdox",
        "test:all": [
            "@test:unit",
            "@test:auth", 
            "@test:repo"
        ],
        "cs": "phpcs --standard=PSR12 classes/",
        "cs:fix": "phpcbf --standard=PSR12 classes/",
        "analyse": "phpstan analyse classes/ --level=5",
        "ci": [
            "@test:all",
            "@cs",
            "@analyse"
        ]
    }
}