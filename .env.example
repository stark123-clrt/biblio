# =================================================================
# FICHIER .env.example - TEMPLATE POUR LE PIPELINE CI/CD
# =================================================================

# CONFIGURATION BASE DE DONNÉES
DB_HOST=localhost
DB_PORT=3306
DB_NAME=mydb
DB_USER=root
DB_PASS=

# CONFIGURATION APPLICATION
APP_NAME="Bibliothèque Numérique"
APP_VERSION=2.0.0
APP_DEBUG=true
APP_TIMEZONE=Europe/Paris
APP_ENV=development

# Chemin des uploads (relatif à la racine)
UPLOAD_PATH=assets/uploads/

# Taille max des fichiers (en bytes) - 50MB par défaut
MAX_FILE_SIZE=52428800

# CONFIGURATION SÉCURITÉ
SESSION_NAME=LIBRARY_SESSION
SESSION_LIFETIME=3600
PASSWORD_MIN_LENGTH=6

# Extensions de fichiers autorisées (séparées par des virgules)
ALLOWED_FILE_TYPES=pdf,epub,jpg,jpeg,png,gif

# AFFICHAGE ET DEBUG
SHOW_ERRORS=true
LOG_LEVEL=debug

# CONFIGURATION EMAIL
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM_ADDRESS=your_email@gmail.com
MAIL_FROM_NAME="Bibliothèque Numérique"

# CONFIGURATION INTERFACE
DEFAULT_THEME=light
DEFAULT_LANGUAGE=fr
ITEMS_PER_PAGE=12